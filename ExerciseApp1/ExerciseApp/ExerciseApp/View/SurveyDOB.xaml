<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExerciseApp.View.SurveyDOB">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#5574F7">
            <StackLayout>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="0.5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                    </Grid.RowDefinitions>
                    <Frame Grid.Column="0" BackgroundColor="#5574F7">
                        <Frame.GestureRecognizers>
                            <!--<TapGestureRecognizer Tapped="Back"/>-->
                        </Frame.GestureRecognizers>
                        <Image Source="icn_back.png" HorizontalOptions="StartAndExpand"></Image>
                    </Frame>
                    <Frame Grid.Column="1" BackgroundColor="#5574F7">
                        <Frame.GestureRecognizers>
                            <!--<TapGestureRecognizer Tapped="Skip"/>-->
                        </Frame.GestureRecognizers>
                        <Label HorizontalOptions="EndAndExpand" Text="SKIP" Margin="0,10,0,0" FontFamily="Europa#700" FontSize="20" FontAttributes="Bold" TextColor="#FFFFFFFF" />
                    </Frame>
                </Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*">
                        </RowDefinition>
                        <RowDefinition Height="*">
                        </RowDefinition>
                        <RowDefinition Height="*">
                        </RowDefinition>
                        <RowDefinition Height="*">
                        </RowDefinition>
                        <RowDefinition Height="*">
                        </RowDefinition>
                    </Grid.RowDefinitions>
                <Label Grid.Row="1" HorizontalOptions="Center" Text="A Bit About You" FontFamily="Europa#700" FontSize="30" FontAttributes="Bold" TextColor="#FFFFFFFF" />
                <Line Grid.Row="1" Margin="0,30,0,0" X1="0" Y1="20" X2="290" Y2="20"
    StrokeLineCap="Round"
      Stroke="White"
      StrokeThickness="2"
                      HorizontalOptions="Center"/>
                <Label HorizontalOptions="Center" Grid.Row="1" Margin="0,60,0,0" Text="To Cater Skill Levels" FontFamily="Europa#700" FontSize="14" FontAttributes="Bold" TextColor="#FFFFFFFF" />
                <Label HorizontalOptions="Center" Grid.Row="2" Text="What is Your Date of Birth?" FontFamily="Europa#700" FontSize="24" FontAttributes="Bold" TextColor="#FFFFFFFF" />
                    <DatePicker Format="d" Grid.Row="2" FontFamily="Europa#700" FontSize="14" FontAttributes="Bold"  WidthRequest="300"  TextColor="Black" HorizontalOptions="CenterAndExpand" VerticalOptions="End" Background="White"></DatePicker>
                <Image Source="PagerDots1_2.png" Grid.Row="3" HorizontalOptions="Center"></Image>
                    <!--<ImageButton Source="btn_white" Grid.Row="4" Margin="0,0,0,0" BackgroundColor="#5574F7" Clicked="OnImageButtonClicked" IsEnabled="True"></ImageButton>-->
                </Grid>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>